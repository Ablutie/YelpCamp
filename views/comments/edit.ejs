<% include ../partials/header%>
<h2 style="text-align:center;"> Edit comment </h2>
<div class="container" style="width: 30%; margin: 25px auto;">
	<form action="/campgrounds/<%= campground %>/comments/<%= comment._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
		</div>
		<div class="form-group">
			<button class="btn btn-primary btn-expand btn-block" style="display: block;">SUBMIT!!!</button>
		</div>
    </form>
    <a href="/campgrounds">Back to Campgrounds</a>	
</div>
